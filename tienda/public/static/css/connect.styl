body
    font-size 14px
    background-color #f6f6f6
    margin 0px

.mt16
    margin-top 16px

.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    padding 16px
    position absolute
    width 500px
    .btn-success
        width: 100%
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none

    .footer
        text-align center
        a 
            display inline block
            font-size .8rem
            margin-left 24px

.box-login
    left calc(50% - 250px)
    top calc(50% - 120px)


.box-register
    left calc(50% - 250px)
    top calc(50% - 280px)
    